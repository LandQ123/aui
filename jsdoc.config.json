{
  "source": {
    "include": ["src/","packages/"],
    "includePattern": ".js$"
  },
  "opts": {
    "template": "jsdocs/templates/docdash/",
    "destination": "jsdocs/",
    "readme": "jsdocs/index.md", 
    "package": "package.json",
    "recurse": true,
    "tutorials": "jsdocs/tutorials",
    "encoding": "utf8"
  },
  "templates": {
      "cleverLinks": false,
      "monospaceLinks": false
  },
  "plugins": ["plugins/markdown"],
  "markdown": {
    "tags": ["example"],
    "idInHeadings": true
  }
}
